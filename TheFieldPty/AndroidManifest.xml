<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.otacm.thefieldpty"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="10" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light.DarkActionBar" >
        <activity
            android:name=".TabActivity"
            android:configChanges="orientation|screenSize" >
        </activity>
        <activity
            android:name=".FirstTabChildActivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_first_tab_child" >
        </activity>
        <activity
            android:name=".Splashctivity"
            android:configChanges="orientation|screenSize"
            android:label="@string/title_activity_splashctivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SelectFavsActivity"
            android:label="@string/title_activity_select_favs" >
        </activity>
        <activity android:name=".AppSettings" >
        </activity>

        <receiver android:name=".remainders.RemainderBroadcastReceiver" />

        <activity
            android:name=".DetalleFavoritoActivity"
            android:label="@string/title_activity_detalle_favorito" >
        </activity>
    </application>

</manifest>